{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "ES2015",
    "module": "ESNext",
    "skipLibCheck": true
  },
  "include": ["src/**/*.js"]
}